<div class="container">
  <div class="row">
    <div class="col-12 text-center title mt-5">
      <h1>新規予約画面</h1>
    </div>
      <%= form_with model: @reservation, local: true, class: 'form', data: { turbo_confirm: 'この内容で登録してよろしいですか?' } do |form| %>
        <div class="col-12 mt-3 content">
          <div class="col-md-4 mx-auto">
            <div class="day form-group">
              <%= form.label :name, '名前' %>
              <%= form.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 mx-auto mt-3">
            <div class="affiliation form-group">
              <%= form.label :name, '学部学科' %>
              <%= form.text_field :affiliation, class: 'form-control' %>
            </div>
          </div>

          <div class="col-md-4 mx-auto mt-3">
            <div class="day form-group">
              <%= form.label :online_or_offline, '希望形式' %>
              <br>
              <%= form.label :online_or_offline, '対面', value: 1 %>
              <%= form.radio_button :online_or_offline, '1', class: 'form-check-label'%>

              <%= form.label :online_or_offline, 'Zoom', value: 0 %>
              <%= form.radio_button :online_or_offline, '0', class: 'form-check-label'%>
            </div>
          </div>

          <div class="col-md-4 mx-auto mt-3">
            <div class="day form-group">
              <%= form.label :day, '日付' %>
              <%= form.text_field :day, class: 'form-control', value: @day, readonly: true %>
            </div>
          </div>

          <div class="col-md-4 mx-auto mt-3">
            <div class="time form-group">
              <%= form.label :time, '時間' %>
              <%= form.text_field :time, class: 'form-control', value: @time, readonly: true %>
            </div>
          </div>

          <div class="col-md-4 mx-auto mt-3">
            <div class="time form-group">
              <%= form.label :confirm_password, '予約確認用パスワード(半角数字4桁)' %>
              <%= form.text_field :confirm_password, class: 'form-control', value: @confirm_password %>
            </div>
          </div>

          <%= form.hidden_field :start_time, value: @start_time %>
          <div class="submit mt-5">
            <%= form.submit '登録する', class: 'btn btn-primary mx-auto d-block' %>
          </div>
        </div>
      <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', reservations_path %>
    </div>
  </div>
</div>
