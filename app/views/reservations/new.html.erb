<div class="container">
  <div class="row">
    <div class="col-12 text-center title mt-5">
      <h1>新規予約画面</h1>
    </div>
    <%= form_with model: @reservation, local: true, class: "form", data: { turbo_confirm: "この内容で登録してよろしいですか?" } do |form| %>
      <div class="col-12 mt-3 content">
        <div class="col-md-4 mx-auto">
          <div class="day form-group">
            <%= form.label :name, "名前" %><span class="badge rounded-pill bg-danger mx-2 mb-1">必須</span>
            <%= form.text_field :name, class: "form-control", value: params[:name], autofocus: true %>
          </div>
        </div>

        <div class="col-md-4 mx-auto mt-3">
          <div class="day form-group">
            <%= form.label :email, "メールアドレス" %><span class="badge rounded-pill bg-danger mx-2 mb-1">必須</span>
            <%= form.text_field :email, class: "form-control", value: params[:email] %>
          </div>
        </div>

        <div class="col-md-4 mx-auto mt-3">
          <div class="faculty_department form-group">
            <%= form.label :faculty_department, "学部学科" %><span class="badge rounded-pill bg-danger mx-2 mb-1">必須</span>
            <%= form.select :faculty_department, Member.faculty_departments.keys, {selected: Member.faculty_departments.keys[0], disabled: Member.faculty_departments.keys[0]}, class: "form-select", value: params[:faculty_department] %>
          </div>
        </div>

        <div class="col-md-4 mx-auto mt-3">
          <div class="grade form-group">
            <%= form.label :grade, "学年" %><span class="badge rounded-pill bg-danger mx-2 mb-1">必須</span>
            <%= form.select :grade, Member.grades.keys, {selected: Member.grades.keys[0], disabled: Member.grades.keys[0]}, class: "form-select", value: params[:grade] %>
          </div>
        </div>

        <div class="col-md-4 mx-auto mt-3">
          <div class="online_or_offline form-group">
            <%= form.label :online_or_offline, "希望形式" %><span class="badge rounded-pill bg-danger mx-2 mb-1">必須</span>
            <%= form.select :online_or_offline, Reservation.online_or_offlines.keys, {selected: Reservation.online_or_offlines.keys[0], disabled: Reservation.online_or_offlines.keys[0]}, class: "form-select", value: params[:online_or_offline] %>
          </div>
        </div>

        <div class="col-md-4 mx-auto mt-3">
          <div class="day form-group">
            <%= form.label :day, "日付" %>
            <%= form.text_field :day, class: "form-control", value: @day, readonly: true %>
          </div>
        </div>

        <div class="col-md-4 mx-auto mt-3">
          <div class="time form-group">
            <%= form.label :time, "時間" %>
            <%= form.text_field :time, class: "form-control", value: @time, readonly: true %>
          </div>
        </div>

        <%= form.hidden_field :start_time, value: @start_time %>
        <div class="submit mt-5">
          <%= form.submit "登録する", class: "btn btn-primary mx-auto d-block" %>
        </div>
      </div>
    <% end %>

    <div class="col-12 text-center mt-3">
      <%= link_to "戻る", reservations_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
