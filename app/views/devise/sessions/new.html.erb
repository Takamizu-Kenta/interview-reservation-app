<div class="container" style="height: 80vh;">
  <div class="login">
    <h2 class="text-center pt-5">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-4 mx-auto">
        <div class="field text-center pt-3 col-xs-4">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
        </div>
        </div>

      <div class="col-md-4 mx-auto">
        <div class="field text-center pt-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを入力" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-center pt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :パスワードを記憶する %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "ログイン", class: "btn btn-outline-primary mt-5 mb-5" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
